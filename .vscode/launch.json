    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "debug-docker",
            "postDebugTask": "debug-docker-stop",
            "env": {
                "DEBUG": "true",
                "PORT": "3000",
                "user": "root",
                "pass": "example"
            },
            "cwd": "${workspaceFolder}/patientportal",
            "program": "${workspaceFolder}/patientportal/server.js"
        }
    ]
}